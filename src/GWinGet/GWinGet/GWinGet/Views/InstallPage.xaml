<Page
    x:Class="GWinGet.Views.InstallPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:local="using:GWinGet.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <CommandBar IsOpen="False" HorizontalAlignment="Stretch" Background="Transparent">
            <AppBarButton Icon="Refresh" Label="Refresh List" Click="AppBarButton_Click" />
        </CommandBar>

        <ListView x:Name="LV"/>
    </StackPanel>

</Page>
